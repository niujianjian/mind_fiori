<mvc:View xmlns:f="sap.ui.layout.form" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:fsemantic="sap.f.semantic" xmlns:core="sap.ui.core" xmlns:semantic="sap.m.semantic" xmlns:footerbar="sap.ushell.ui.footerbar" controllerName="com.mindray.oppprt.controller.Detail">
	<semantic:DetailPage id="page" navButtonPress="onNavBack" showNavButton="{device>/system/phone}" title="{i18n>detailTitle}" busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}">
		<semantic:content>
			<ObjectHeader id="objectHeader" title="{Description}" number="{ path: 'NetValueMan', formatter: '.formatter.currencyValue' }" numberUnit="{i18n>currency}">
				<ObjectAttribute text="{i18n>expectEnd}:{path: 'ExpectEnd', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy.MM.dd', strictParsing: true , UTC: true}}"/>
				<ObjectAttribute text="{i18n>zzfld00001g}:{path: 'Zzfld00001g', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy.MM.dd', strictParsing: true , UTC: true}}"/>
			</ObjectHeader>
			<IconTabBar id="iconTabBar" class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter id="iconTabBarFilter2" icon="sap-icon://hint" text="{i18n>iconTabBarInfo2}">
						<f:Form id="FormDisplay1" editable="false">
							<f:layout>
								<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="3" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
							</f:layout>
							<f:formContainers>
								<f:FormContainer>
									<f:formElements>
										<f:FormElement label="{i18n>objectId}">
											<f:fields>
												<Text text="{ObjectId}"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="{i18n>source}">
											<f:fields>
												<Select enabled="false" forceSelection="false" selectedKey="{Source}" autoAdjustWidth="true" class="myBorderNone" items="{path: '/STATUS_DROPSet',templateShareable:true, filters:[{path : 'Key',operator : 'EQ',value1: 'SOURCE'}]}">
													<core:Item key="{Key}" text="{Value}"/>
												</Select>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="{i18n>zzfld00002a}">
											<f:fields>
												<Select enabled="false" forceSelection="false" selectedKey="{path:'Zzfld00002a',formatter:'.checkSdtype'}" autoAdjustWidth="true" class="myBorderNone" items="{path: '/STATUS_DROPSet',templateShareable:true, filters:[{path : 'Key',operator : 'EQ',value1: 'SALES_GROUP'}]}">
													<core:Item key="{Key}" text="{Value}"/>
												</Select>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="{i18n>currPhase}">
											<f:fields>
												<Select id="sele12" enabled="false" forceSelection="false" selectedKey="{CurrPhase}" autoAdjustWidth="true" class="myBorderNone" items="{path: '/STATUS_DROPSet',templateShareable:true, filters:[{path : 'Key',operator : 'EQ',value1: 'CURR_PHASE'}]}">
													<core:Item key="{Key}" text="{Value}"/>
												</Select>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="{i18n>statUser}">
											<f:fields>
												<Select enabled="false" forceSelection="false" selectedKey="{path:'StatUser',formatter:'.checkDisplay'}" autoAdjustWidth="true" class="myBorderNone" items="{path: '/STATUS_DROPSet',templateShareable:true, filters:[{path : 'Key',operator : 'EQ',value1: 'STAT_USER'}]}">
													<core:Item key="{Key}" text="{Value}"/>
												</Select>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="{i18n>probability}">
											<f:fields>
												<Text text="{Probability}%"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="{i18n>memo}">
											<f:fields>
												<Text text="{Memo}">
													<!--<layoutData>-->
													<!--	<l:GridData span="XL12 L12 M12 S12"/>-->
													<!--</layoutData>-->
												</Text>
											</f:fields>
										</f:FormElement>
									</f:formElements>
								</f:FormContainer>
							</f:formContainers>
						</f:Form>
					</IconTabFilter>
					<IconTabFilter visible="false" id="iconTabBarFilter1" icon="sap-icon://competitor" text="{i18n>iconTabBarInfo1}">
						<f:Form id="FormDisplay2" editable="false">
							<f:layout>
								<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
							</f:layout>
							<f:formContainers>
								<f:FormContainer>
									<f:formElements>
										<f:FormElement label="{i18n>listCode}">
											<f:fields>
												<Select enabled="false" forceSelection="false" selectedKey="{Listcode}" autoAdjustWidth="true" items="{path: '/STATUS_DROPSet',templateShareable:true, filters:[{path : 'Key',operator : 'EQ',value1: 'LISTCODE'}]}">
													<core:Item key="{Key}" text="{Value}"/>
												</Select>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="{i18n>zzfld00006b}">
											<f:fields>
												<Text text="{Zzfld00006b}"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="{i18n>zzfld00004u}">
											<f:fields>
												<Text text="{Zzfld00004u} "/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="{i18n>zzfld00004t}">
											<f:fields>
												<Text text="{Zzfld00004t}"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="{i18n>zzfld0000b8}">
											<f:fields>
												<Text text="{Zzfld0000b8}"/>
											</f:fields>
										</f:FormElement>
									</f:formElements>
								</f:FormContainer>
							</f:formContainers>
						</f:Form>
					</IconTabFilter>
					<IconTabFilter id="iconTabBarFilter3" icon="sap-icon://cart" text="{i18n>iconTabBarInfo3}">
						<ScrollContainer horizontal="false" vertical="true" height="100%" width="100%">
							<Table id="lineItemsList" width="auto" items="{path:'ZOPP_ITEMSet',templateShareable:true}" updateFinished="onListUpdateFinished" noDataText="{i18n>detailLineItemTableNoDataText}" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiNoMarginTop sapUiNoMarginBottom sapUiNoMarginBegin sapUiNoMarginEnd">
								<columns>
									<Column>
										<Text text="{i18n>prodHierDescr}"/>
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="{i18n>zzconfNote}"/>
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="{i18n>netValueMan}"/>
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="{i18n>zzfld0000f4}"/>
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true" visible="{detailView>/sdtypeHide}">
										<Text text="{i18n>ZzSdtype}"/>
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="{i18n>zzContacter}"/>
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="{i18n>zzfld0000gg}"/>
									</Column>
									<Column hAlign="Right">
										<Text text="{i18n>itemNum}"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem press="onProductDetail" type="Navigation">
										<cells>
											<ObjectIdentifier title="{ProdHierDescr}"/>
											<Text text="{ZzconfNote}"/>
											<ObjectNumber number="{NetValueMan}" unit="{i18n>currency}"/>
											<Select enabled="false" forceSelection="false" selectedKey="{Zzfld0000f4}" autoAdjustWidth="false" items="{path: '/STATUS_DROPSet', templateShareable:true,filters:[{path : 'Key',operator : 'EQ',value1: 'ZZFLD0000F4'}]}">
												<core:Item key="{Key}" text="{Value}"/>
											</Select>
											<Select enabled="false" forceSelection="false" selectedKey="{ZzSdtype}" autoAdjustWidth="false" visible="{detailView>/sdtypeHide}" items="{path: '/STATUS_DROPSet', templateShareable:true,filters:[{path : 'Key',operator : 'EQ',value1: 'SDTYPE'}]}">
												<core:Item key="{Key}" text="{Value}"/>
											</Select>
											<!--<Link text="{ZzContacter}" press="onPhoneLinkPress" />-->
											<Text text="{ZzContacter}"/>
											<Link text="{Zzfld0000gg}" press="onPhoneLinkPress"/>
											<ObjectNumber number="{path: 'ItemNum', type: 'sap.ui.model.type.Integer'}" unit="{i18n>itemNumUnit}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</ScrollContainer>
					</IconTabFilter>
					<IconTabFilter id="iconTabBarFilter4" icon="sap-icon://group" text="{i18n>iconTabBarInfo4}">
						<ScrollContainer horizontal="false" vertical="true" height="100%" width="100%">
							<Table id="linePartnerList" width="auto" items="{path:'ZOPP_PARTNERSet',templateShareable:false}" updateFinished="onPartnerUpdateFinished" noDataText="{i18n>detailPartnerTableNoDataText}" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiNoMarginTop sapUiNoMarginBottom sapUiNoMarginBegin sapUiNoMarginEnd">
								<columns>
									<Column width="12em"/>
									<Column hAlign="Right"/>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="{i18n>telephone}"/>
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="{i18n>email}"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells>
											<ObjectIdentifier title="{McName1}"/>
											<Select enabled="false" forceSelection="false" selectedKey="{PartnerFct}" autoAdjustWidth="false" class="myBorderNone" items="{path: '/STATUS_DROPSet', templateShareable:true,filters:[{path : 'Key',operator : 'EQ',value1: 'PARTNER'}]}">
												<core:Item key="{Key}" text="{Value}"/>
											</Select>
											<Link text="{TelNumber}" press="onPhoneLinkPress"/>
											<Text text="{SmtpAddr}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</ScrollContainer>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</semantic:content>
		<semantic:editAction>
			<!--visible="true"-->
			<semantic:EditAction id="edit" visible="{path:'ZOPP_HEADER/IsChange'}" press="onEdit"/>
		</semantic:editAction>
		<semantic:customFooterContent>
			<Button text="{i18n>createAct}" width="100px" id="__button1" type="Emphasized" press="onContinue"/>
			<Button enabled="true" press="onCopy" text="{i18n>copy}"/>
			<!--<Button enabled="true" id="deleteButton" press="onDelete" text="Delete"/>-->
		</semantic:customFooterContent>
		<semantic:customHeaderContent>
			<Button width="100px" id="__button_fav" icon="{detailView>/FavIcon}" press="onFav"/>
		</semantic:customHeaderContent>
	</semantic:DetailPage>
</mvc:View>